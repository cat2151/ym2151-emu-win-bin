name: Daily Windows Library Build

on:
  schedule:
    # 毎日UTC 00:00に実行（JST 09:00）
    - cron: '0 0 * * *'
  
  # 手動実行を許可
  workflow_dispatch:

permissions:
  contents: read

jobs:
  build-rust:
    name: Build Rust Library
    runs-on: ubuntu-latest
    
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4
      
      - name: Install dependencies
        run: |
          sudo apt-get update
          sudo apt-get install -y mingw-w64
      
      - name: Setup Rust
        uses: actions-rust-lang/setup-rust-toolchain@v1
        with:
          toolchain: stable
          target: x86_64-pc-windows-gnu
      
      - name: Build Rust library
        run: |
          chmod +x scripts/build_rust.sh
          ./scripts/build_rust.sh
      
      - name: Upload artifact
        uses: actions/upload-artifact@v4
        with:
          name: ym2151-rust
          path: |
            src/rust/target/x86_64-pc-windows-gnu/release/libym2151.a
            src/rust/target/x86_64-pc-windows-gnu/release/ym2151.dll
          retention-days: 30
  
  build-go:
    name: Build Go Library
    runs-on: ubuntu-latest
    
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4
      
      - name: Install dependencies
        run: |
          sudo apt-get update
          sudo apt-get install -y mingw-w64
      
      - name: Build Go library
        run: |
          chmod +x scripts/build_go.sh
          ./scripts/build_go.sh
      
      - name: Upload artifact
        uses: actions/upload-artifact@v4
        with:
          name: ym2151-go
          path: src/go/libym2151.a
          retention-days: 30
  
  build-python:
    name: Build Python Library
    runs-on: ubuntu-latest
    
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4
      
      - name: Install dependencies
        run: |
          sudo apt-get update
          sudo apt-get install -y mingw-w64
      
      - name: Build Python library
        run: |
          chmod +x scripts/build_python.sh
          ./scripts/build_python.sh
      
      - name: Upload artifact
        uses: actions/upload-artifact@v4
        with:
          name: ym2151-python
          path: src/python/ym2151.dll
          retention-days: 30
  
  build-typescript:
    name: Build TypeScript/Node.js Library
    runs-on: windows-latest  # Native Addonのビルドにはネイティブ環境が必要
    
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4
      
      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '18'
      
      - name: Build TypeScript library
        shell: bash
        run: |
          chmod +x scripts/build_typescript.sh
          ./scripts/build_typescript.sh
      
      - name: Upload artifact
        uses: actions/upload-artifact@v4
        with:
          name: ym2151-typescript
          path: src/typescript_node/build/Release/ym2151.node
          retention-days: 30
  
  commit-binaries:
    name: Commit Built Libraries
    runs-on: ubuntu-latest
    needs: [build-rust, build-go, build-python, build-typescript]
    permissions:
      contents: write
    
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4
        with:
          token: ${{ secrets.GITHUB_TOKEN }}
      
      - name: Create binaries directory
        run: mkdir -p binaries
      
      - name: Download Rust artifact
        uses: actions/download-artifact@v4
        with:
          name: ym2151-rust
          path: binaries/rust/
      
      - name: Download Go artifact
        uses: actions/download-artifact@v4
        with:
          name: ym2151-go
          path: binaries/go/
      
      - name: Download Python artifact
        uses: actions/download-artifact@v4
        with:
          name: ym2151-python
          path: binaries/python/
      
      - name: Download TypeScript artifact
        uses: actions/download-artifact@v4
        with:
          name: ym2151-typescript
          path: binaries/typescript/
      
      - name: Commit and push binaries
        run: |
          git config --local user.email "github-actions[bot]@users.noreply.github.com"
          git config --local user.name "github-actions[bot]"
          git add binaries/
          git diff --staged --quiet || git commit -m "🤖 Daily build: Update Windows libraries $(date +'%Y-%m-%d')"
          git push
